   <aerosurface_scale name="Left Aileron Control">
      <input>fcs/aileron-delay</input>
      <range>
        <min> -0.349 </min>
        <max>  0.349 </max>
      </range>
      <output>fcs/left-aileron-pos-rad</output>
   </aerosurface_scale>

   <aerosurface_scale name="Right Aileron Control">
      <input>fcs/aileron-delay</input>
      <range>
        <min> -0.349 </min>
        <max>  0.349 </max>
      </range>
      <output>fcs/right-aileron-pos-rad</output>
   </aerosurface_scale>

   <aerosurface_scale name="left aileron normalized">
      <input>fcs/left-aileron-pos-rad</input>
      <domain>
        <min>-0.349</min>
        <max> 0.349</max>
      </domain>
      <range>
        <min>-1</min>
        <max> 1</max>
      </range>
      <output>fcs/left-aileron-pos-norm</output>
   </aerosurface_scale>

   <aerosurface_scale name="right aileron normalized">
      <input>fcs/right-aileron-pos-rad</input>
      <domain>
        <min>-0.349</min>
        <max> 0.349</max>
      </domain>
      <range>
        <min>-1</min>
        <max> 1</max>
      </range>
      <output>fcs/right-aileron-pos-norm</output>
   </aerosurface_scale>

  </channel>

  <channel name="elevon mixer">


    <fcs_function name="left-elevon-pos-norm">
      <function>
        <avg>
          <property>-fcs/left-aileron-pos-norm</property>
          <property>fcs/elevator-pos-norm</property>
        </avg>
      </function>
    </fcs_function>

    <fcs_function name="right-elevon-pos-norm">
      <function>
        <avg>
          <property>fcs/right-aileron-pos-norm</property>
          <property>fcs/elevator-pos-norm</property>
        </avg>
      </function>
    </fcs_function>

  </channel>

</system>
